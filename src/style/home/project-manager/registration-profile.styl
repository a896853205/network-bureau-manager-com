.registration-profile-box {
  display: flex;
  align-items: center;
  justify-content: space-between;

  .profile-left-box {
    width: calc(98% - 300px);

    .left-item-box {
      display: flex;
      border: 1px solid #ddd;
      padding: 10px;

      .item-icon-box {
        font-size: 50px;
        margin-right: 5px;
      }

      .item-text-box {
        display: flex;
        flex-direction: column;
        width: calc(100% - 50px);
        text-align: left;

        .text-top-box {
          text-align: center;
          font-size: 20px;
          font-weight: 600;
          margin-bottom: 7px;

          .title-tag {
            font-weight: 500;
            margin-left: 5px;
          }
        }

        .text-subtitle {
          font-size: 12px;
          color: #9b9ead;
        }

        .text-content-box {
          display: flex;
          flex-wrap: wrap;
          margin-bottom: 10px;

          .text-content-link {
            width: 50%;
            margin-bottom: 5px;

            .content-tag {
              margin-left: 5px;
            }
          }
        }
      }
    }
  }

  .profile-right-box {
    width: 300px;

    .enterprise-info-bottom-box {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-left: 0;

      .enterprise-info-item-box {
        width: 80%;
        display: flex;
        padding: 6px 0;
        justify-content: space-between;

        .enterprise-info-icon {
          margin-right: 2px;
          font-size: 18px;
        }
      }
    }
  }
}