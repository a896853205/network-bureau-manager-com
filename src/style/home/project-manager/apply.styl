.detail-apply-box {
  padding: 10px;

  .apply-description-box {
    padding: 10px;

    .registration-apply-content {
      white-space: pre;
    }
  }

  .apply-button-box {
    display: flex;
    justify-content: space-between;
    padding: 0 10px 10px;

    .fail-button {
      background: #f5222d;
      border: 1px solid #f5222d;

      &:[disabled] {
        color: rgba(0, 0, 0, 0.25);
        background-color: #f5f5f5;
        border-color: #d9d9d9;
        text-shadow: none;
        box-shadow: none;
      }
    }

    .success-button {
      background: #52c41a;
      border: 1px solid #52c41a;
    }
  }

  .apply-textArea-box {
    margin: 0 10px;
    width: 50%;
  }
}